n=10
for i in range(1,n):
    for j in range(n-i):
        print("*", end="")
    print("")

---------------------------------------------------------------------

n=10
for i in range(1,n):
    for j in range(i):
        print("*", end="")
    print("")

---------------------------------------

n=10
for i in range(1,n):
    for j in range(n):
        if j==i or j==n-i:
            print("*", end="")
        else:
            print(" ", end="")
    print("")

eredmeny=0
n=0
szam=int(input("Adj meg egy egész számot "))

while szam!=0:
    eredmeny=eredmeny+szam
    n+=1
    szam=int(input("Adj meg egy egész számot "))
print("Számok összege %d" %eredmeny)
print("Számok átlaga %f" %(eredmeny/n))

